<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/record_item_height_size"
    android:layout_marginHorizontal="@dimen/margin_vertical_record_item"
    android:layout_marginVertical="@dimen/margin_vertical_record_item"
    android:layout_marginTop="@dimen/margin_vertical_record_item"
    android:background="@color/colorGrayLight"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/card_shadow_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_card"
        android:paddingVertical="@dimen/padding_card">

        <ImageButton
            android:layout_width="@dimen/itemview_btn_size"
            android:layout_height="@dimen/itemview_btn_size"
            android:background="@drawable/ic_play_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/file_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>